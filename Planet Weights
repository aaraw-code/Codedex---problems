# Ask user for Earth weight
weight = float(input("Enter your weight on Earth (kg): "))


planets = {
    "1": ("Mercury", 0.38),
    "2": ("Venus", 0.91),
    "3": ("Mars", 0.38),
    "4": ("Jupiter", 2.53),
    "5": ("Saturn", 1.07),
    "6": ("Uranus", 0.89),
    "7": ("Neptune", 1.14)
}


planet = input("Enter planet number (1 to 7): ")


if planet in planets:
    name, gravity = planets[planet]
    destination_weight = weight * gravity
    print(f"On {name}, your weight would be {destination_weight:.2f} kg ðŸš€")
else:
    print("Invalid planet number.")










